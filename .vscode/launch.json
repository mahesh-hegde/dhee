{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "dhee preprocess",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/dhee/main.go",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "preprocess",
                "--input",
                "./data",
                "--output",
                "./data",
                "--embeddings-file",
                "./data/rv.emb.jsonl",
            ]
        },
        {
            "name": "dhee server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/dhee/main.go",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "go_generate",
            "buildFlags": [
                "-tags=json1,fts5"
            ],
            "args": [
                "server",
                "--data-dir",
                "./data",
                "--store",
                "sqlite",
                "--cert-dir",
                "./certs",
            ]
        },
        {
            "name": "dhee index",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "remove_db",
            "buildFlags": [
                "-tags=json1,fts5"
            ],
            "program": "${workspaceFolder}/cmd/dhee/main.go",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "index",
                "--data-dir",
                "./data",
                "--store",
                "sqlite"
            ]
        },
        {
            "name": "dhee stats",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/dhee/main.go",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "stats",
                "--data-dir",
                "./data"
            ]
        },
        {
            "name": "Poor man's REPL",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/repl/main.go",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
        }
    ]
}