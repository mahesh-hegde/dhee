		#cards-container .card:last-child:nth-child(odd) {
			grid-column: 1 / -1;
		}
        .dotted-underline {
            border-bottom: 1px dotted currentColor;
            cursor: help;
        }
        .pada-word {
            cursor: pointer;
            position: relative;
        }

        .pada-popup {
            position: absolute;
            background: var(--bs-body-bg);
            color: var(--bs-body-color);
            border: 1px solid var(--bs-border-color);
